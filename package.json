{
  "name": "simple-todo",
  "version": "1.0.0",
  "private": true,
  "dependencies": {
    "@material-ui/core": "^4.7.0",
    "firebase": "6.3.5",
    "moment": "2.24.0",
    "node-sass": "4.13.1",
    "prettier": "^1.19.1",
    "react": "^16.10.2",
    "react-dom": "^16.10.2",
    "react-icons": "3.7.0",
    "react-router-dom": "^5.1.2",
    "react-scripts": "^3.3.0",
    "react-toastify": "^5.4.1",
    "uuid": "3.3.2"
  },
  "devDependencies": {
    "@firebase/firestore-types": "^1.8.1",
    "@testing-library/react": "^9.1.3",
    "@types/jest": "^24.9.0",
    "@types/react": "^16.9.15",
    "@types/react-dom": "^16.9.4",
    "@types/react-router-dom": "^5.1.3",
    "@types/uuid": "^3.4.6",
    "@typescript-eslint/eslint-plugin": "^2.11.0",
    "@typescript-eslint/parser": "^2.11.0",
    "cypress": "^3.8.2",
    "eslint": "^6.7.2",
    "eslint-plugin-cypress": "^2.8.1",
    "eslint-plugin-react": "^7.17.0",
    "i": "^0.3.6",
    "npm": "^6.13.6",
    "typescript": "^3.7.3"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test --watchAll --coverage",
    "eject": "react-scripts eject",
    "lint": "eslint \"src/**\"",
    "typecheck": "tsc --noEmit",
    "cy:run": "cypress run",
    "cy:open": "cypress open"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/**/*.{tsx,ts}",
      "!src/**/**/index.ts",
      "!src/react-app-env.d.ts",
      "!src/index.tsx",
      "!src/context/*.{tsx,ts}"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 90,
        "lines": 90,
        "statements": 90
      }
    },
    "coverageReporters": [
      "html",
      "text"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
