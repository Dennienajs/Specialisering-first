{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "ES2018",
    "module": "esnext",
    "jsx": "react",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "removeComments": false,
    "isolatedModules": true,
    "noEmit": true,
    "strict": true,
    "noImplicitAny": true
  },
  "include": ["**/*.tsx", "cypress/**/*.ts", "cypress/integration/listeapp.spec.js"],
  "types": ["jest", "cypress", "@percy/cypress", "@types/testing-library__cypress"]
}
